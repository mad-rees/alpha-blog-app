<div class="container">
  <h1 class="text-center pt-4">Categories</h1>
</div>

<div class="container">
  <div class="container">
    <div class="row align-items-center">
      <div class="col">
      </div>
      <div class="col col-md-auto">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
      <div class="col">
      </div>
    </div>
</div>

<% @categories.each do |category| %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-9 mt-4">
      <div class="card text-center shadow-sm mb-4 bg-body rounded">
        <div class="card-body">
          <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
          <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
        </div>
        <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago, edited <%= time_ago_in_words(category.updated_at) %></small>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>


