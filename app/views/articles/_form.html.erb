<%= render 'shared/errors', obj: @article %>


<%= form_with(model: @article, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Your title here" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Your description here..." %>
  </div>
  
  <div class="mb-3">
    <div class="form-check">
      <%= f.label :category, class: "form-label" %>
      <%= f.collection_check_boxes :category_ids, Category.order(:name), :id, :name do |b| %>
        <span>
          </br>
          <%= b.check_box %>
          <%= b.label %>

        </span>
      <% end %>
    </div>
  </div>
  
  <div class="mb-3">
    <%= f.submit class: "btn btn-primary" %></br>
  </div>
  <div class="mb-3">
    <%= link_to 'Cancel', articles_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
